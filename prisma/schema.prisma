generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("VITE_DATABASE_URL")
}

model User {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  email              String   @unique
  password           String
  refreshToken       String
  resetPasswordToken String
}

model Job {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  cronjobId Int?
  name      String   @unique
  filetype  String
  url       String   @unique
  crontab   String
  perMinute Int      @default(1)
  headers   String?
  parser    String?
  saveFile  Boolean  @default(true)
  enabled   Boolean  @default(true)
  deleted   Boolean  @default(false)
  files     File[]
}

model File {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  job       Job      @relation(fields: [jobId], references: [id])
  jobId     Int
}
